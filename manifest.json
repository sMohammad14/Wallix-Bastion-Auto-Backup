{
  "manifest_version": 3,
  "name": "Wallix Bastion Auto Backup",
  "version": "1.0",
  "permissions": ["storage", "alarms", "tabs", "scripting", "downloads"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}